<p id="notice"><%= notice %></p>

<p>
  <strong>Image:</strong>
  <%= image_tag @feed.image.url %><br>
</p>
<p>
  <strong>Comments:</strong>
  <%= @feed.comment %></p>
<p>
<%= link_to "#{@feed.user.name}", user_path(@feed.user_id) %></p>
<% if @feed.user.id == current_user.id %>
  <%= link_to 'Edit', edit_feed_path(@feed) %>
  <%= link_to 'Destroy', @feed, method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%# current_user.favorite_feeds.find_by(feed_id: @feed.id) をヘルパーへ %>
<% unless @feed.user_id == current_user.id %>
  <% if current_user.favorite_feeds.find_by(id: @feed.id).present? %>
    <%= link_to 'お気に入りから削除', favorite_path(feed_id: @feed.id), method: :delete %>
  <% else %>
    <%= link_to 'お気に入りに追加', favorites_path(feed_id: @feed.id), method: :post %>
  <% end %>
<% end %>
<%= link_to 'Back', feeds_path %>
